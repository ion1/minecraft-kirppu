  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "dist/"
  }
}
